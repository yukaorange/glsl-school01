---
import Layout from "@/layouts/Layout.astro";
import Main from "@/layouts/Main.astro";
import Button from "@/components/Button.astro";
import Section from "@/layouts/Section.astro";
---

<Layout title="takaoka_webdesigner">
  <Main>
    <div id="container">
    </div>
  </Main>
</Layout>

<script>
  import texture from "@/images/textures/square.jpg";
  import { Sketch } from "@/js/webgl/webgl01/webgl";
  const images =  [(texture as any).src];
  const sketch = new Sketch({
    dom: document.getElementById("container"),
    images: images,
  });
</script>

<style lang="scss">
  #container {
    position: fixed;
    z-index: 100;
    width: 100%;
    height: 100vh;
    top: 0;
    left: 0;
  }
</style>
