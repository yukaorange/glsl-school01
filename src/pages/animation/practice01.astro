---
import Layout from "@/layouts/Layout.astro";
import Main from "@/layouts/Main.astro";
import Button from "@/components/Button.astro";
import Section from "@/layouts/Section.astro";

const image01 = "/sneakers/sneaker01.jpg";
const image02 = "/sneakers/sneaker02.jpg";
const image03 = "/sneakers/sneaker03.jpg";
const image04 = "/sneakers/sneaker04.jpg";
const image05 = "/sneakers/sneaker05.jpg";
const image06 = "/sneakers/sneaker06.jpg";
const image07 = "/sneakers/sneaker07.jpg";
const image08 = "/sneakers/sneaker08.jpg";

const images = [
  image01,
  image02,
  image03,
  image04,
  image05,
  image06,
  image07,
  image08,
];
---

<Layout title="takaoka_webdesigner">
  <Main>
    <div class="spacer"></div>
    <div class="sticky-container" data-content-sticky="0">
      <div class="scroll-container">
        <ul class="list" data-scroll-slider="0">
          {
            images.map((image, index) => (
              <li class="list__item" data-scroll-slider-item>
                <img
                  src={image}
                  alt="sneakers"
                  width={1024}
                  height={768}
                  loading="lazy"
                />
              </li>
            ))
          }
        </ul>
        <p class="scroll-container__text _roboto">scrub horizon</p>
      </div>
    </div>
    <div class="spacer"></div>
    <div class="sticky-container" data-content-sticky="1">
      <div class="scroll-container">
        <ul class="list" data-scroll-slider="1">
          {
            images.map((image, index) => (
              <li class="list__item" data-scroll-slider-item>
                <span
                  class="list__image-container"
                  data-scroll-slider-img-container
                >
                  <img
                    src={image}
                    alt="sneakers"
                    width={1024}
                    height={768}
                    loading="lazy"
                  />
                </span>
              </li>
            ))
          }
        </ul>
        <p class="scroll-container__text _roboto">scrub fadeout</p>
      </div>
    </div>
    <div class="spacer"></div>
    <div class="sticky-container" data-content-sticky="2">
      <div class="scroll-container">
        <ul class="list" data-scroll-slider="2">
          {
            images.map((image, index) => (
              <li class="list__item" data-scroll-slider-item>
                <img
                  src={image}
                  alt="sneakers"
                  width={1024}
                  height={768}
                  loading="lazy"
                />
              </li>
            ))
          }
        </ul>
        <p class="scroll-container__text _roboto">easing horizon</p>
      </div>
    </div>
    <div class="spacer"></div>
    <div class="sticky-container" data-content-sticky="3">
      <div class="scroll-container">
        <ul class="list" data-scroll-slider="3">
          {
            images.map((image, index) => (
              <li class="list__item" data-scroll-slider-item>
                <span
                  class="list__image-container"
                  data-scroll-slider-img-container
                >
                  <img
                    src={image}
                    alt="sneakers"
                    width={1024}
                    height={768}
                    loading="lazy"
                  />
                </span>
              </li>
            ))
          }
        </ul>
        <p class="scroll-container__text _roboto">easing fadeout</p>
      </div>
    </div>
    <div class="spacer"></div>
    
  </Main>
</Layout>

<script>
  import { init } from "@/js/animation/animation01/index";

  window.addEventListener("DOMContentLoaded", () => {
    init();
  });
</script>

<style lang="scss">
  .sticky-container {
    height: 400vh;
    border: 1px solid var(--gray);
  }
  .scroll-container {
    height: 100vh;
    overflow: hidden;
    position: sticky;
    top: 0;
    left: 0;
  }

  .scroll-container__text {
    position: absolute;
    bottom: 0;
    right: 0;
    padding: 2.4rem;
    text-transform: uppercase;
  }

  .list {
    position: relative;
  }

  .list__item {
    position: absolute;
    width: 50rem;
    max-width: 80%;
    aspect-ratio: 4/3;
  }

  .list__image-container {
    // width: 100%;
    height: 100%;
    display: block;
    position: relative;
  }

  .spacer {
    height: 25vh;
  }
</style>
