---
import Layout from "@/layouts/Layout.astro";
import Main from "@/layouts/Main.astro";
import Button from "@/components/Button.astro";
import Section from "@/layouts/Section.astro";
import CardWorks from "@/components/CardWorks.astro";
import animationThumb01 from "@/images/sneakers/sneaker01.jpg";
import animationThumb02 from "@/images/foodie/foodie08.jpg";
import animationThumb03 from "@/images/heritage/heritage02.jpg";
import practiceThumb01 from "@/images/textures/square.jpg";
import practiceThumb02 from "@/images/girls/girls01.png";
---

<Layout title="takaoka_webdesigner">
  <Main>
    <Section heading="webgl">
      <div class="cards">
        <CardWorks
          title="cube"
          description="webgl practice01"
          thumbnail={practiceThumb01}
          url="/webgl/practice01"
        />
        <CardWorks
          title="slider lenis"
          description="webgl practice02"
          thumbnail={practiceThumb02}
          url="/webgl/practice02"
        />
      </div>
    </Section>
    <Section heading="animation">
      <div class="cards">
        <CardWorks
          title="horizontal scroll"
          description="animation practice"
          thumbnail={animationThumb01}
          url="/animation/practice01"
        />
        <CardWorks
          title="sticky gallery"
          description="animation practice"
          thumbnail={animationThumb02}
          url="/animation/practice02"
        />
        <CardWorks
          title="slideshow mask-image"
          description="animation practice"
          thumbnail={animationThumb03}
          url="/animation/practice03"
        />
      </div>
    </Section>
    <Section heading="reproduction">
      <div class="cards">
        <!-- <CardWorks
          title="side scroll"
          description="animation practice01"
          thumbnail={animationThumb01}
          url="/animation/practice01"
        /> -->
      </div>
    </Section>
  </Main>
</Layout>

<style lang="scss">
  .cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    row-gap: 3.2rem;
  }
  @media (max-width: 768px) {
    .cards {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>
